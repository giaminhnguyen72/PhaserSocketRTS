{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "*": ["node_modules/", "src/types/*", "src/interfaces/*"]
    },
    "plugins": []
  },
  "include": ["src", "src/*", "src/**/*", "src/interfaces/.ts"],
  
}