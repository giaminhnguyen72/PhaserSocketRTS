{
  "name": "engine",
  "type": "module",
  "version": "1.0.0",
  "description": "Game with a game engine",
  "main": "/dist",
  "scripts": {
    "deploy": "npm run update-source && npm run install && npm run compile-ts && npm run restart",
    "update-source": "git fetch --all && git reset --hard origin/master",
    "restart": "pm2 reload all",
    "compile-ts": "tsc",
    "start": "node dist/index.js",
    "build": "webpack",
    "test": "mocha --opts \"./test/mocha.opts\"",
    "watch-ts": "tsc -w",
    "inspect": "node --inspect dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yello.bold, cyan.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giaminhnguyen72/PhaserSocketRTS.git"
  },
  "author": "GiaMinh Nguyen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/giaminhnguyen72/PhaserSocketRTS/issues"
  },
  "homepage": "https://github.com/giaminhnguyen72/PhaserSocketRTS#readme",
  "dependencies": {
    "@types/offscreencanvas": "^2019.7.3",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "socket.io-msgpack-parser": "^3.0.2",
    "three": "^0.161.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.15",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/three": "^0.161.2",
    "@types/ws": "^8.5.10",
    "concurrently": "^7.6.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
